{
  "name": "vite-project",
  "private": true,
  "version": "0.0.0",
  "type": "commonjs",
  "main": "electron/main.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development concurrently \"vite\" \"electron .\"",
    "clean": "rimraf dist dist_electron",
    "build:frontend": "vite build",
    "build:electron": "electron-builder",
    "build:copy-wasm": "echo 'Copying WASM... skipped, handled by electron-builder'",
    "build": "npm run clean && npm run build:frontend && npm run build:electron",
    "start": "electron .",
    "electron:dev": "electron .",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "@xmldom/xmldom": "^0.9.7",
    "docx": "^9.1.1",
    "edge-js": "^23.1.5",
    "file-saver": "^2.0.5",
    "menubar": "^9.5.1",
    "node-addon-api": "^8.3.1",
    "node-gyp": "^11.2.0",
    "node-window-manager": "^2.2.4",
    "pg": "^8.13.3",
    "pizzip": "^3.1.8",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.1.5",
    "vite-plugin-wasm": "^3.4.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^8.0.1",
    "cross-env": "^7.0.3",
    "electron": "^22.3.27",
    "electron-builder": "^23.6.0",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9.17.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.14.0",
    "rimraf": "^6.0.1",
    "sass": "^1.85.1",
    "vite": "^6.0.5",
    "vite-plugin-svgr": "^4.3.0"
  },
  "build": {
    "appId": "com.ulgetMax.package",
    "productName": "Zaochka",
    "copyright": "Copyright Â© 2025 Volyntsev Maksim",
    "icon": "electron/assets/IconKitchen-Output/android/play_store_512.ico",
    "win": {
      "icon": "electron/assets/IconKitchen-Output/android/ic_college_Zaochka.ico"
    },
    "mac": {
      "category": "public.app-category.utilities"
    },
    "electronDownload": {
      "cache": "./electron_cache"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraFiles": [
      {
        "from": "public/test.wasm",
        "to": "resources/test.wasm"
      }
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist_electron"
    }
  }
}
